<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>AddPizzaServlet</servlet-name>
		<servlet-class>first.AddPizzaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddPizzaServlet</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>CheckShohinServlet</servlet-name>
		<servlet-class>first.CheckShohinServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CheckShohinServlet</servlet-name>
		<url-pattern>/check</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>DeliverShohinServlet</servlet-name>
		<servlet-class>first.DeliverShohinServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeliverShohinServlet</servlet-name>
		<url-pattern>/deliver</url-pattern>
	</servlet-mapping>
</web-app>